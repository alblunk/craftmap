<div class="col-md-2">
  <div class="row" id="header2">
    <div class="logo centerize">
      <br>
      <span >&nbsp;&nbsp;&nbsp;&nbsp;</span><a href="/"><%= image_tag("FarallonCo-LongForm-Beta-B.png", width: "150",id:"header-logo") %></a>
    </div>
    <br>
    <h6 class="centerize" >
      <% if user_signed_in? %>
        <a href="/users/edit" id="h-account" class="small-black-links" >MY ACCOUNT</a>
        
        &nbsp;&nbsp;&nbsp;<%= link_to 'LOG OUT', destroy_user_session_path, method: :delete, class:'small-black-links' %>
      <% else %>
        &nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'JOIN US',  new_user_registration_path, id:'ballsack' %>

        &nbsp;&nbsp;&nbsp;<%= link_to 'SIGN IN',  new_user_session_path, class:'small-black-links' %>
      <% end %>
    </h6>
    <div class="col-md-12">
      <div id="header">
        <% if current_user.try(:admin?) %>
          <div style="background-color:rgba(255, 204, 0,.4); color:white;text-align:center;margin-top:-10px;">
            <h6 style="padding-top:5px;font-size:.75em !important;">Admin Panel</h6>
            <hr style="margin-top:-10px;margin-bottom: -10px;">
            <div style="margin-left:10px;">
              <a href="/brands">BRANDS</a>
              <%= link_to "ADD+", new_brand_path %>
              <hr style="margin-top:-12px;margin-bottom:-12px;">
              <a href="/products">PRODUCTS</a>
              <%#= link_to "ADD+" %>
              <hr style="margin-top:-12px;margin-bottom:-12px;">
              <a href="/admin/users" >USERS</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row" style="margin-right:5%">
    <div class="col-md-12">
      <% if current_user.try(:admin?) %>
        <div class="flash-alert-header" id="admin-flash">
          <%= render partial: "shared/flash_messages"%>
        </div>
      <% else %>
        <div class="flash-alert-header">
          <%= render partial: "shared/flash_messages"%>
        </div>
      <% end %>
    </div>
  </div>
  <div class="hidden-xs hidden-sm" style="border-right:double rgba(80, 80, 80,.2);height:125%;position:fixed;margin-top:-10px;margin-left:176px;"></div>
</div>
