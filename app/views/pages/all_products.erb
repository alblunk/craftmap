
<div class="col-md-9">
	<div class="row">
	    <div class="col-md-12">
				<h6 class="centerize" style="font-size:1.5em !important;margin-top:20px">The Products</h6>
				<h6 class="centerize" style="font-size:.55em !important;margin-top:5px"><a style="text-decoration:none;color:black;"href="/all_brands">Go to Brands</a></h6>
				<hr style="width:60%;" class="centerize">

				<%= paginate @products %>
				<br>
				
			<% @products.select { |p| p.active }.each do |product| %>
		      <div class="col-md-3 col-s-4 col-xs-6">
		        <%= link_to image_tag(product.primary_image), product, target: "_blank", class: "thumbnail" %>
		      </div>
		    <% end %>

  		</div>
  </div>
  <div class="row">
		<hr style="width:60%;margin-bottom:10px;">
		 <%= paginate @products %>
	</div>
</div>
