<div class="col-md-6" id="b-midpane" style="margin-right:1px !important">
  <div class="row">
    <div class="col-md-12">
      <div style="margin-top:-20px;margin-bottom:20px">
        <a href="/" class="backhome-btn" style="margin-top:-15px"><div class="glyphicon glyphicon-home" ></div></a>
        <a class="visible-xs visible-sm pull-right" style="padding-right:15px;margin-top:5px" href="mailto:?subject=Take a look at Farallon Co...&amp;body=You should check out <%= @brand.name %> on Farallon Co.: <%=request.original_url.html_safe%>" ><%= image_tag("email-message.png", class: "social-show", width: "25") %></a>
      </div>
        <div class="row">
          <div class="col-md-12">
          <div class="centerize hidden-xs hidden-sm">
            <h5 id="social-title" style="margin-top:0px;letter-spacing:2px;font-size:.65em" class="centerize" >SPREAD THE WORD</h5>
                <!-- TWITTER -->
              <a href="http://twitter.com/home?status=Check+out+@<%= @brand.twitter %>+found+on+@farallonco+(<%=request.original_url.html_safe%>)" target="blank" ><%= image_tag("twitter.png", id:"fb-social", class: "social-show", width: "25") %>
              </a>
              <!-- FACEBOOK -->
              <a href="http://www.facebook.com/sharer/sharer.php?s=100&p[url]=<%=request.original_url%>&p[images][0]=<%= @brand.logo.url %>&p[title]=Check+out+<%= @brand.name %>&p[summary]=Farallon+Co.+-+Find+the+Best+Brands,+Submit+Product+Ideas+,+Join+the+Company." target="blank"><%= image_tag("facebook.png", class: "social-show", width: "20") %></a>
