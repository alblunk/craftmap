                  <br>
                  <a href="<%= @product.existingurl.html_safe unless @product.existingurl.blank? %>" target="blank">
                    <div class="flatbtn-deux centerize" id="existing-product-btn">Take me there</div>
                  </a>
                </div>
              </div>
            </div>
          </div>
